{
  "env": {
    "es2023": true,
    "node": true
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:prettier/recommended",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-misused-promises": ["off"],
    "@typescript-eslint/prefer-namespace-keyword": "off",

    // This is addded instead of Architecture Tests in Java version
    // to ensure imports
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./src/sorter/*",
            "from": ["./src/planning", "./src/simulation"]
          },
          {
            "target": "./src/planning/parallelization/*",
            "from": ["./src/simulation"]
          },
          {
            "target": "./src/simulation/*",
            "from": ["./src/planning", "./src/sorter"]
          },
          {
            "target": "./src/utils/*",
            "from": ["./src/planning", "./src/sorter", "./src/simulation"]
          }
        ]
      }
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
